<h1>Owners/Parents</h1>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Emergency Contact</th>
      <th>Emergency Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.phone %></td>
        <td><%= owner.emerg_name %></td>
        <td><%= owner.emerg_phone %></td>
        <td><%= link_to content_tag(:i, nil, class: "fa fa-eye"), owner %></td>
        <td><%= link_to content_tag(:i, nil, class: "fa fa-pencil"), edit_owner_path(owner) %></td>
        <td><%= link_to content_tag(:i, nil, class: "fa fa-trash-o"), owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path, class: "btn btn-info" %>
